{
  "name": "@singapore-construction-erp/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "nx build backend",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd apps/frontend && npm run start",
    "start:backend": "node dist/apps/backend/main.js",
    "lint": "nx run-many --target=lint --projects=frontend,backend",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && npm install",
    "db:generate": "cd apps/backend && npm run db:generate",
    "db:migrate": "cd apps/backend && npm run db:migrate",
    "db:seed": "cd apps/backend && npm run db:seed"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@nx/js": "21.4.1",
    "@nx/next": "^21.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "nx": "21.4.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "next": "~15.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
